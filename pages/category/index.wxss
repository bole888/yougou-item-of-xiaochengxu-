/* pages/category/index.wxss */


.content{
  width:100%;
  /* position: absolute;
  top:100rpx;
  bottom: 0; */
  display: flex;
  height:calc(100vh-100rpx);
}

.left{
  width: 200rpx;
  background: #eee;
  height: 100%;
  overflow: auto;
  flex-shrink: 0;
}
.item{
       border-bottom: 1px solid #ddd;
       padding: 20rpx 0;
       text-align: center;
       position:relative;
}
.active{
   color: red;
   background: #fff;
}
.active::before{
  display: block;
  content: '';
  width: 3px;
  height: 20px;
  background: red;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-10px);
}

.right{
  flex: 1;
  margin-left: 20rpx;
  height: 100%;
  overflow: auto;
}
.bgi image{
  width:100%;
  height: 200rpx;
}


/* .category{
  margin-top: 30rpx;
} */

.category-title{
     text-align: center;
     color: #ccc;
     margin: 50rpx 0;
}
.category-title text{
     margin: 0 30rpx;
     color: #000;
     font-size: 40rpx;
}

.category-list{
    display: flex;
    width: 100%;
    /* justify-content: space-between; */
    margin: 50rpx 0;
    flex-wrap: wrap;
}
.category-list navigator{
    display: flex;
    /* justify-content: space-between; */
    
    width: 33.33%;
    flex-direction: column;
    align-items: center;
    padding: 10rpx;
    box-sizing: border-box;
}

.category-list navigator image{
  width: 100%;
  height: 100rpx;
}