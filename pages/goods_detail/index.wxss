swiper {
  width: 750rpx;
  height: 750rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

.goods-info {
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

.goods-price {
  color: red;
  font-size: 40rpx;
}

.goods-title {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.goods-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* padding: 10rpx;
  box-sizing: border-box; */
  border-left: 1px solid #ccc;
  width: 120rpx;
  /* margin-left: 20rpx; */
  color: #999;
}

.goods-left {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  flex: 1;
}

.tab {
  width: 100%;
  display: flex;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  box-shadow: 0 -2px 2px #eee;
}

.btn {
  position: absolute;
  top: 0;
  left: 0;
    width: 20%;
     height: 100%;
     overflow: auto;
     opacity: 0;
}
.btn button{
        height:100rpx;
        /* width:75rpx; */
}

.left-l {
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  color: #666;
  border: 1px solid #666;
}

.right-piece {
  width: 30%;
  /* display: flex; *//* flex-direction: column; *//* justify-content: center; *//* align-items: center; */
  text-align: center;
  line-height: 100rpx;
}

.right-piece {
  background: orange;
  /* border: 1px solid #666; */
  color: #fff;
}

.right-piece:nth-child(4) {
  background: red;
}

.goods_detail {
  margin: 20rpx 0;
  width: 100%;
}

.detail-name {
  display: flex;
  background: #ccc;
  height: 80rpx;
}

.detail-name view {
  width: 50%;
  text-align: center;
  line-height: 80rpx;
}

.active {
  background: red;
  color: #fff;
}

.attr-item {
  line-height: 2;
}

.attr-item text {
  margin-right: 20rpx;
}
