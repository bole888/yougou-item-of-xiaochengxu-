.header {
  /* display: flex;
   justify-content: space-around; */
  padding: 40rpx 20rpx;
}

.userinfo {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.tel{
  display: flex;
  align-items: center;
}


.border image {
  display: block;
  width: 100%;
  height: 10rpx;
}

.eee {
  width: 100%;
  height: 20rpx;
  background: #eee;
}

.title {
  font-size: 40rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #ccc;
}

.title text {
  margin: 0 30rpx;
  font-size: 30rpx;
}

.goods-item {
  display: flex;
  padding: 10rpx;
  
  /* justify-content: center; */
  border-bottom: 1px solid #ccc;
}
.left{
    display: flex;
      align-items: center;
}

.goods-item image {
  width: 200rpx;
  height: 200rpx;
}

.right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.right text{
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}
.under {
  display: flex;
  justify-content: space-between;
}
.price{
  color: #ff0000;
  font-size: 40rpx;
}
.calc{
     display: flex;
      align-items: center;
}

input{
  width:36rpx;
  }

.calc-price{
     width: 40rpx;
     height: 40rpx;
     line-height: 40rpx;
     margin: 0 10rpx;
     text-align: center;
     border: 1px solid #000;
}

.bottom{
   display: flex;
   justify-content: space-between;
   position: fixed;
   bottom: 0;
   left: 0;
   background: #fff;
   height: 100rpx;
   width: 100%;
}
.bottom-left {
      display: flex;
      align-items: center;
     
      width: 30%;
}
.bottom-left icon{
    margin: 0 20rpx;
}
.bottom-right{
    display: flex;
    flex: 1;
     justify-content: space-between;
}
.total{
      display: flex;
      flex-direction: column;
   justify-content: space-around;
}
.pay{
    width: 40%;
     height: 100%;
      background: #ff0000;
       text-align: center;
       line-height: 100rpx;
       color: #fff;
       z-index: 9;
}
.send{
   color: #999;
}

.payfee{
     color: #ff0000;
     font-size: 40rpx;
    
}
.getsum{
        margin: 50rpx;
}


button{
      width:100% !important;
}
 